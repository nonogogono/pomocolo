<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= render 'shared/aside_profile', users: nil, user: current_user %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form', micropost: @micropost %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Pomodoro</h1>
    <p>ポモドーロテクニックで集中！</p>
    <p>タスクは管理しよう！</p>
  </div>
<% end %>
