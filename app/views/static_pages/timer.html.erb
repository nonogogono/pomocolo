<% provide(:title, "Timer") %>
<div class="row">
  <aside class="col-md-4">
    <!-- Timer -->
    <%= render 'static_pages/timer_box' %>
    <!-- タスク追加 & 一覧表示 -->
    <section class="task_form">
      <%= render 'shared/task_form', task: @task %>
    </section>
    <% if @tasks.any? %>
      <ol class="tasks">
        <% @tasks.each do |task| %>
          <%= render 'shared/task', task: task %>
        <% end %>
      </ol>
    <% end %>
  </aside>
  <div class="col-md-8">
    <!-- タスクグラフ -->
    <div data-turbolinks="false">
      <%= link_to "週毎", week_path, class: "graph-change" %>
      <%= link_to "月毎", month_path, class: "graph-change" %>
    </div>
    <%= render 'static_pages/task_graph_day', tasks_day: @tasks_today %>
    <!-- 本日のタスク内容 -->
    <% if @microposts_with_task_today.any? %>
      <h3>Today's task (<%= @microposts_with_task_today.count %>)</h3>
      <ol class="microposts">
        <% @microposts_with_task_today.each do |micropost| %>
          <%= render 'shared/micropost', micropost: micropost %>
        <% end %>
      </ol>
      <%= paginate @microposts_with_task_today %>
    <% end %>
  </div>
</div>
<!--（モーダルウィンドウ）マイクロポストフォーム -->
<div class="modal-open">
  <div class="modal-micropost-form">
    <section class="micropost_form">
      <%= render 'shared/micropost_form', micropost: @micropost, need_task: true, last_task: @last_task %>
    </section>
  </div>
</div>
<div id="modal-content"></div>
<!-- タイマー音源 -->
<%= render 'static_pages/audios' %>
<% if defined? @show_modal %>
  <%= render 'static_pages/modal_js' %>
<% end %>
