<div class="search-box clearfix">
  <%= search_form_for @search_user, url: root_path do |f| %>
    <%= f.search_field :name_or_profile_cont, class: "search-field", id: "search-field-user" %>
    <%= f.button :type => "submit", class: "search-btn", id: "search-btn-user" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
<% if defined? @users %>
  <%= render 'shared/user_index', users: @users %>
<% end %>
