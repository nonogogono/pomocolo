<%= form_with(model: micropost, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Content", id: "micropost-content-area" %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary", id: "btn-post" %>
<% end %>
