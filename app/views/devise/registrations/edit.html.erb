<% provide(:title, @user.name) %>
<div class="form-wrapper">
  <h2 style="font-weight: bold;">プロフィールを編集 (※必須)</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label "※ユーザー名", class: "form form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form form-field" %>
    </div>
    <div class="field">
      <%= f.label "プロフィール", class: "form form-label" %>
      <%= f.text_area :profile, rows: 2, autofocus: true, autocomplete: "profile", class: "form form-area", id: "profile-area" %>
    </div>
    <div class="field">
      <%= f.label "タイマー(分)", class: "form form-label" %>
      <%= f.number_field :task_time, autocomplete: "task_time", class: "form form-field", min: 1, max: 60 %>
    </div>
    <div class="field">
      <%= f.label "※メールアドレス", class: "form form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form form-field" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div style="color: red;">メールドレスの変更を完了させるには <%= resource.unconfirmed_email %> のメールを確認してください</div>
    <% end %>
    <div class="field">
      <%= f.label :current_password, class: "form form-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form form-field" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit " 更新", class: "btn btn-primary btn-sm btn-profile" %>
    </div>
  <% end %>
  <hr>
  <div class="under-link">
    <span class="back-link">
      <%= link_to "戻る", user_path(resource) %>
    </span>
    <span class="delete-profile">
      <%= link_to "アカウント削除", registration_path(resource_name), method: :delete, class:"delete-account",
          data: { confirm: "本当に削除しますか？"} %>
    </span>
  </div>
</div>
