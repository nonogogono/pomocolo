<% provide(:title, "パスワード") %>
<div class="form-wrapper">
  <h2 style="font-weight: bold;">パスワードをお忘れですか？</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, errors_num_unnecessary: "true" %>
    <div class="field">
      <%= f.label :email, class: "form form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form form-field" %>
    </div>
    <div class="actions">
      <%= f.submit "パスワード再設定", class: "btn btn-secondary btn-sm btn-login" %>
    </div>
  <% end %>
  <hr>
  <%= render "devise/shared/links" %>
</div>
