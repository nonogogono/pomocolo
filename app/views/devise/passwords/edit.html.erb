<% provide(:title, "パスワード") %>
<div class="form-wrapper">
  <h2 style="font-weight: bold;">パスワード変更</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label "新しいパスワード\n(6文字以上)", class: "form form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form form-field" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, class: "form form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form form-field" %>
    </div>
    <div class="actions">
      <%= f.submit "パスワード変更", class: "btn btn-success btn-sm btn-login" %>
    </div>
  <% end %>
  <hr>
  <%= render "devise/shared/links" %>
</div>
