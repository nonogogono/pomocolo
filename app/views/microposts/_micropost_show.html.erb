<div id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <% if micropost.task %>
    <div class="task-info">
      <span class="task">#<%= micropost.task %></span>
      <span class="task-time"> (<%= micropost.task_time %>)</span>
    </div>
  <% end %>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <div class="time-ago"><%= time_ago_in_words(micropost.created_at) %>前</div>
    <%= render 'shared/like', micropost: micropost %>
    <% if current_user == micropost.user %>
      <%= link_to "削除", micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
</div>
