<%= form_with(model: [micropost, comment], local: true, id: "comment-form-with") do |f| %>
  <%= render 'shared/error_messages', errors_num_unnecessary: true, object: f.object %>
  <div class="field">
    <%= f.hidden_field :micropost_id, value: micropost.id %>
    <%= f.text_area :content, placeholder: "Content", id: "comment-content-area", maxlength: 200 %>
  </div>
  <%= button_tag type: "submit", class: "btn btn-success btn-block", id: "btn-post" do %>
    <i class="far fa-comments"></i> コメント
  <% end %>
<% end %>
